@model DACN_DVTRUCTUYEN.Models.Product_Question

@{
    ViewData["Title"] = "Delete";
}


<h3>Bạn có chắc muốn xóa điều này</h3>
<div>
    <h4>Câu hỏi thường gặp của sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductID)
        </dd>
        <dt class="col-sm-2">
            Mã câu hỏi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionId)
        </dd>
        <dt class = "col-sm-2">
            Câu hỏi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question)
        </dd>
        <dt class = "col-sm-2">
            Câu trả lời
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
