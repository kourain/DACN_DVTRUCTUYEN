@model (List<(User,int,long)>,DateOnly,DateOnly)

@{
    ViewData["Title"] = "Thống kê";
}

<div class="pagetitle">
    <h2>Danh sách những người mua nhiều nhất nhiều nhất kể từ ngày @Model.Item2 tới ngày @Model.Item3</h2>
</div>
<section style="margin:auto">
    <p>
        <form style="display:flex;align-items: center;justify-content: center;">
            <div class="form-group col-md-2" style="padding-left:20px; padding-right:20px;">
                <label>Từ ngày</label>
                <input class="form-control mb-1" type="date" name="startdate" value="@Model.Item2.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.AddDays(-180).ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group col-md-2" style="padding-left:20px; padding-right:20px;">
                <label>Từ ngày</label>
                <input class="form-control mb-1" type="date" name="enddate" value="@Model.Item3.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.AddDays(-180).ToString("yyyy-MM-dd")" />
            </div>
            <button type="submit" class="btn btn-success" style="width:150px; height:10%;margin-top: 1%;">
                <i class="bi bi-search">
                    Tìm kiếm
                </i>
            </button>
        </form>
    </p>
</section>
<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="card-body mt-4">
                    <table class="table table-borderless datatable">
                        <colgroup>
                            <col style="width:8%"/>
                            <col style="width:10%"/>
                            <col style="width:10%"/>
                            <col style="width:10%"/>
                            <col style="width:10%"/>
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="">Mã người dùng</th>
                                <th class="">Tên người dùng</th>
                                <th class="">Số đơn hàng</th>
                                <th class="">Số tiền đã sử dụng</th>
                                <th class="">Tổng số tiền đã sử dụng</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Item1)
                            {
                                <tr>
                                    <td class="" scope="row">@item.Item1.UserId</td>
                                    <td class="">@item.Item1.Name</td>
                                    <td class="">@item.Item2</td>
                                    <td class="">@item.Item3</td>
                                    <td class="">@item.Item1.TotalPaid</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <style>
    </style>
</section>
