@model List<(DateOnly,long)>
@{
    string topricestr(long number)
    {
        string result = number.ToString();
        int num = result.Length;
        while (num > 3)
        {
            result = result.Insert(num - 3, ".");
            num -= 3;
        }
        return result;
    }
    string val = "";
    string time = "";
    foreach( var item in Model)
    {
        val += $"{item.Item2},";
        time += $"\"{item.Item1.ToString("yyyy-MM-dd")}\",";
    }
    val = val.Substring(0, val.Length - 1);
    time = time.Substring(0, time.Length - 1);
}
<div class="pagetitle">
    <h2>Doanh thu đếm  được trong 7 tháng gần nhất</h2>
</div>
<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card recent-sales overflow-auto">
                <div class="card-body mt-4">
                    <table class="table table-borderless datatable">
                        <colgroup>
                            <col style="width:8%" />
                            <col style="width:10%" />
                            <col style="width:10%" />
                            <col style="width:10%" />
                            <col style="width:10%" />
                            <col style="width:10%" />
                            <col style="width:10%" />
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="">Thời điểm</th>
                                <th class="">Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="" scope="row">@item.Item1.ToString("MM/yyyy")</td>
                                    <td class="">@topricestr(item.Item2)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <style>
        /*    td, th {
                             border: solid 1px;
                         } */
    </style>
</section>
<!-- Reports -->
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Thống kê <span>/ 7 Tháng gần nhất</span></h5>

            <!-- Line Chart -->
            <div id="reportsChart" style="padding-right:15px"></div>
            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    new ApexCharts(document.querySelector("#reportsChart"), {
                        series: [{
                            name: 'Doanh thu',
                            data: [@Html.Raw(val)]
                        }],
                        chart: {
                            height: 350,
                            type: 'area',
                            toolbar: {
                                show: false
                            },
                        },
                        markers: {
                            size: 4
                        },
                        colors: ['#4154f1', '#2eca6a', '#ff771d'],
                        fill: {
                            type: "gradient",
                            gradient: {
                                shadeIntensity: 1,
                                opacityFrom: 0.3,
                                opacityTo: 0.4,
                                stops: [0, 90, 100]
                            }
                        },
                        dataLabels: {
                            enabled: false
                        },
                        stroke: {
                            curve: 'smooth',
                            width: 2
                        },
                        xaxis: {
                            type: 'datetime',
                            categories: [@Html.Raw(time)]
                        },
                        tooltip: {
                            x: {
                                format: 'MM/yyyy'
                            },
                        }
                    }).render();
                });
            </script>
            <!-- End Line Chart -->

        </div>

    </div>
</div><!-- End Reports -->
