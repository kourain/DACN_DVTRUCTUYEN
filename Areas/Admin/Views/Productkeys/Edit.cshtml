@model Product_Key

@{
    ViewData["Title"] = "Edit";
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>sửa khóa/tài khoản bán của sản phẩm </h2>
    </div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="ProductID">Tên sản phẩm</label>
                <select asp-for="ProductID"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.productList, "Value", "Text"))">
                </select>
            </div>
            <div class="form-group col-md-6">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <label asp-for="OptionValue">Tên lựa chọn</label>
                <select asp-for="OptionValue"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ProductOption, "Value", "Text"))">
                </select>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Key1">Khóa 1</label>
                <input type="text" class="form-control mb-3" asp-for="Key1" placeholder="Nhập Khóa 1" required>
                <span asp-validation-for="Key1" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Key2">Khóa 2</label>
                <input type="text" class="form-control mb-3" asp-for="Key2" placeholder="Nhập Khóa 2" required>
                <span asp-validation-for="Key2" class=" alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
        <button onclick="history.back()" class="btn btn-lg btn-warning p-2">Quay lại</button>
    </form>

</div>

