@model DACN_DVTRUCTUYEN.Models.Product_Key

@{
    ViewData["Title"] = "Delete";
}


<h3>Bạn có chắc muốn xóa điều này</h3>
<div>
    <h4>Câu hỏi thường gặp của sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductID)
        </dd>
        <dt class="col-sm-2">
            Mã lựa chọn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OptionValue)
        </dd>
        <dt class="col-sm-2">
            Khóa 1
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Key1)
        </dd>
        <dt class = "col-sm-2">
            Khóa 2
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Key2)
        </dd>
        <dt class = "col-sm-2">
            Câu trả lời
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button onclick="history.back()" class="btn btn-lg btn-warning p-2">Quay lại</button>
    </form>
</div>
