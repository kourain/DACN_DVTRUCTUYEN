@model (string,string)

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Sửa sản phẩm</h2>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Tải xuống tệp tin mẫu</label>
                <a type="submit" class="form-control mb-3" href="/admin/productkeys/template/@Model.Item1/@Model.Item2"><i class="bi bi-download"></i>  Template-@Model.Item1-@(Model.Item2).xlsx</a>
            </div>
            <div class="form-group col-md-6">
                <label>Chọn tệp excel</label>
                <input type="file" class="form-control mb-3" name="FormFile" id="FormFile" accept=".xlsx" maxlength="25242880">
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.success))
            {
                <div class="form-group col-md-6" style="color:green">
                    @ViewBag.success
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
                <div class="form-group col-md-6" style="color:red">
                    @ViewBag.error
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.inf))
            {
                <div class="form-group col-md-6" style="color:black">
                    @ViewBag.inf
                </div>
            }
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
        <button onclick="history.back()" class="btn btn-lg btn-warning p-2">Quay lại</button>
    </form>
</div>
