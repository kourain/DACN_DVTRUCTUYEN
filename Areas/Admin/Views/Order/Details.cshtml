@model OrderReportView

@{
    ViewData["Title"] = "Chi tiết";
    string producttype(int type)
    {
        switch (type)
        {
            case 0:
                return "Tạo tài khoản";
            case 1:
                return "Có sẵn";
            case 2:
                return "Đăng ký/mua chính chủ";
            default:
                return "Không thể đọc thông tin";
        }
    }
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Xem chi tiết</h2>
    </div>
    <form method="post">
        <div class="form-row">
            <input name="productid" value="@Model.ProductID" hidden>
            <input name="optionvalue" value="@Model.ProductOptionValue" hidden>
            <input name="set" value="1" hidden>
            <div class="form-group col-md-6">
                <label>Mã đơn hàng</label>
                <input type="text" class="form-control mb-3" name="orderid" value="@Model.OrderID" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Thời điểm phát sinh</label>
                <input type="text" class="form-control mb-3" value="@Model.Time.ToString("HH:mm:ss dd/MM/yyyy")" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Sản phẩm</label>
                <input type="text" class="form-control mb-3" value="@Model.ProductName-@Model.OptionName" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Loại</label>
                <input type="text" class="form-control mb-3" value="@producttype(Model.Type)" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Số lượng</label>
                <input type="text" class="form-control mb-3" value="@Model.Quantity" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Tên người dùng</label>
                <input type="text" class="form-control mb-3" value="@Model.Name" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Email</label>
                <input type="text" class="form-control mb-3" value="@Model.Email" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Số điện thoại</label>
                <input type="text" class="form-control mb-3" value="@Model.Phone" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Telegram username</label>
                <input type="text" class="form-control mb-3" value="@Model.TelegramUserName" readonly>
                <span class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Thông tin người dùng đính kèm</label>
                <textarea type="text" class="form-control mb-3" readonly>@Model.Note</textarea>
                <span class=" alert-danger"></span>
            </div>
        </div>
        @if (Model.OrderStatusID == 1)
        {
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Đánh dấu hoàn tất</button>
        }
        <button onclick="history.back()" class="btn btn-lg btn-warning p-2">Quay lại</button>
    </form>
</div>