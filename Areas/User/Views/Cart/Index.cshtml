<script>
    function paynow() {
        setTimeout(() =>
            fetch("/user/cart/pay")
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // Process the retrieved user data
                    console.log('User Data:', data);
                    if (data.code == 1) {
                        window.location.href = data.messenger;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                }), 1500);
    }
